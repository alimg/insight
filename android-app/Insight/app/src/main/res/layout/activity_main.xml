<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:bb="http://schemas.android.com/apk/res-auto"

	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:orientation="vertical"
	android:gravity="center_horizontal"
	android:background="@color/act_background"

	tools:context="com.fmakdemir.insight.DeviceActivity">

	<com.beardedhen.androidbootstrap.BootstrapEditText
		android:id="@+id/edit_title_insight"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/app_name"
		android:textSize="36sp"
		android:layout_marginBottom="10dp"
		android:editable="false"

		bb:be_state="success"
		/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="..."
        android:id="@+id/text_status"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center"
        android:layout_marginTop="90dp">

		<com.beardedhen.androidbootstrap.BootstrapButton
			android:id="@+id/btn_take_img"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/btn_req_photo"
			android:onClick="onBtnClick"

			bb:bb_type="primary"
			bb:bb_icon_left="fa-file-image-o"
			/>

		<com.beardedhen.androidbootstrap.BootstrapButton
			android:id="@+id/btn_list_photos"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/btn_list_photos"
			android:onClick="onBtnClick"

			bb:bb_type="success"
			bb:bb_icon_right="fa-image"
			/>
	</LinearLayout>

    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="5dp"
		android:gravity="center">

		<com.beardedhen.androidbootstrap.BootstrapButton
			android:id="@+id/btn_take_snd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/btn_req_sound"
			android:onClick="onBtnClick"

			bb:bb_type="primary"
			bb:bb_icon_left="fa-file-sound-o"
			/>

		<com.beardedhen.androidbootstrap.BootstrapButton
			android:id="@+id/btn_list_snd"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/btn_list_sounds"
			android:onClick="onBtnClick"

			bb:bb_type="success"
			bb:bb_icon_right="fa-play"
			/>
	</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center">

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_take_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_req_video"
            android:onClick="onBtnClick"

            bb:bb_type="primary"
            bb:bb_icon_left="fa-file-sound-o"
            />

        <com.beardedhen.androidbootstrap.BootstrapButton
            android:id="@+id/btn_list_video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_list_videos"
            android:onClick="onBtnClick"

            bb:bb_type="success"
            bb:bb_icon_right="fa-play"
            />
    </LinearLayout>

    <com.beardedhen.androidbootstrap.BootstrapButton
		android:id="@+id/btn_wifi_setup"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/btn_wifi_setup"
		android:onClick="onBtnClick"
		android:layout_marginTop="5dp"

		bb:bb_type="danger"
		bb:bb_icon_right="fa-gear"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mute"
            android:id="@+id/btn_mute"
            android:onClick="onBtnClick"
            android:layout_gravity="center_horizontal" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unmute"
            android:onClick="onBtnClick"
            android:id="@+id/btn_unmute" />
    </LinearLayout>

</LinearLayout>
