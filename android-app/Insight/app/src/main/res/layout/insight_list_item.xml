<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="48dp"
	android:background="#F3F3F3">

	<!-- icon -->
	<ImageView
		android:id="@+id/item_icon"
		android:layout_width="32dp"
		android:layout_height="32dp"
		android:layout_marginLeft="8dp"
		android:layout_marginRight="8dp"
		android:layout_marginTop="4dp"
		android:contentDescription="@string/icon"
		android:src="@drawable/ic_launcher"
		/>

	<!-- title -->
	<TextView
		android:id="@+id/insight_item_id"
		android:layout_height="wrap_content"
		android:textSize="18sp"
		android:paddingTop="8dp"
		android:paddingBottom="8dp"
		android:text="@string/app_name"
		android:layout_width="0dp"
		android:textColor="@color/black"
		android:layout_weight="1"/>

	<!-- button -->
	<com.beardedhen.androidbootstrap.FontAwesomeText
		android:id="@+id/item_on_off"
		android:layout_width="32dp"
		android:layout_height="match_parent"
		bootstrapbutton:fa_icon="fa-power-off"
		android:textSize="16sp"
		android:textColor="#ffffff"
		android:paddingLeft="6dp"
		android:paddingTop="10dp"
		android:background="@color/bbutton_success"
		/>

	<!-- button -->
	<com.beardedhen.androidbootstrap.FontAwesomeText
		android:id="@+id/item_counter"
		android:layout_width="32dp"
		android:layout_height="match_parent"
		bootstrapbutton:fa_icon="fa-angle-double-right"
		android:textSize="16sp"
		android:textColor="#ffffff"
		android:paddingLeft="8dp"
		android:paddingTop="10dp"
		android:background="@color/bbutton_primary"
		/>

</LinearLayout>