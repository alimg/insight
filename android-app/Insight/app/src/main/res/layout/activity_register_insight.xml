<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			  xmlns:tools="http://schemas.android.com/tools"
			  xmlns:app="http://schemas.android.com/apk/res-auto"
			  android:layout_width="match_parent"
			  android:layout_height="match_parent"
			  android:paddingLeft="@dimen/activity_horizontal_margin"
			  android:paddingRight="@dimen/activity_horizontal_margin"
			  android:paddingTop="@dimen/activity_vertical_margin"
			  android:paddingBottom="@dimen/activity_vertical_margin"
			  android:orientation="vertical"
			  tools:context="com.fmakdemir.insight.RegisterInsightActivity">

	<com.beardedhen.androidbootstrap.BootstrapEditText
		android:id="@+id/edit_insight_id"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="Insight Id"
	/>
	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="20dp"
		android:gravity="center"
		android:orientation="horizontal">

		<com.beardedhen.androidbootstrap.BootstrapButton
			android:id="@+id/btn_register_insight"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onRegInsightBtnClicked"
			android:text="@string/register"
			app:bb_icon_right="fa-key"
			app:bb_type="warning"
			/>
		<com.beardedhen.androidbootstrap.BootstrapButton
			android:id="@+id/btn_scan_qr"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:onClick="onRegInsightBtnClicked"
			android:text="@string/btn_scan_qr"
			app:bb_icon_right="fa-qrcode"
			app:bb_type="success"
			/>

	</LinearLayout>
</LinearLayout>
